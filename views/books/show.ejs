<% include ../partials/header %>
<div class="container text-center styled-text search-results">
        <h1>Details for: <%=book.title %></h1>
        <% include ../partials/searchBlock %>
</div>
<div class="container py-4 px-4 bg-light">
    <ul class="media">
            <img class="image-container align-self-start" src="<%= book.image %>" alt="cover image">
        <div class="media-body">
            <h5 class="card-title">
                    <%= book.title %>
            </h5>
            <h6 class="card-subtitle mb-2 text-muted">
                    <%= book.book_author %>
            </h6>
            <p class="card-text">
                    <%= book.description %>
            </p>

                <% book.author.forEach((author) => { %>
                <% if(currentUser && author.id.equals(currentUser._id)) { %>
                    <a class="badge badge-pill badge-dark" href='/books/<%= book._id %>/edit'>Edit Book</a>
                    <% } %>
                <% }); %>
                <% if(currentUser && book.author[0].id.equals(currentUser._id)) { %>
                    <form class="delete-form" action='/books/<%= book._id %>?_method=DELETE' method='POST'>
                        <button class="badge badge-pill badge-light">Delete Book</button>
                    </form>
                <% } %>
        </div>
    </ul>
        <div>
        <%  let showBook = true;
            book.author.forEach((author) => {
            if(currentUser && (author.id.equals(currentUser._id))) { 
                showBook = false;
            }
        }); 
            if(showBook) { %>
                <form class="my-2 my-lg-0" action="/books/mybooks/<%= book._id %>?_method=PUT" method="POST">
                    <input class="btn btn-dark btn-large my-2 my-sm-0" type="submit" value="Add To My Bookshelf">
                </form>  
            <% } %>
        </div> 
</div>
    
<hr>

<div class="text-center container">
    <a class="btn btn-link btn-block" href="/books/<%= book._id %>/notes/new">Add A Note</a>
</div>
<hr>
<div class= container>
    <div class="card-columns">
        <% book.notes.forEach((note) => { %>
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">
                    <%= note.author.username %> 
                </h5>
                <p class="card-text"> 
                    <%= note.text %> 
                </p>
                <% if(currentUser && note.author.id.equals(currentUser._id)) { %>
                <a class="badge badge-pill badge-dark" href='/books/<%= book._id %>/notes/<%=note._id%>/edit'>Edit Note</a>
                <form class="delete-form" action='/books/<%= book._id %>/notes/<%=note._id%>?_method=DELETE' method='POST'>
                    <button class="badge badge-pill badge-light">Delete Note</button>
                </form>
                <% } %>
            </div>
        </div>   
        <% }) %>
    </div>
</div>
<% include ../partials/footer %>
