<% include ../partials/header %>
<h1 style="text-align: center;"> Edit <%= book.title %></h1>
<div class="container">
    <div class="row">
        
        <div style="width: 30%; margin: 25px auto;">
            <form action="/books/<%= book._id %>?_method=PUT" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="book[title]" value="<%= book.title %>">
                </div>    
                <div class="form-group">
                    <input class="form-control" type="text" name="book[book_author]" value="<%= book.book_author %>">
                </div> 
                <div class="form-group">
                    <input class="form-control" type="text" name="book[image]" value="<%= book.image %>">
                </div> 
                <div class="form-group">
                    <input class="form-control" type="text" name="book[description]" value="<%= book.description %>">
                </div> 
                <div class="form-group">
                    <button class="btn btn-lg btn-default btn-block btn-primary">Submit!</button>
                </div>
                

            </form>
            <a href="/books">Back to Books</a>
        </div>
    </div>
    
    
    
</div>
<% include ../partials/footer %>