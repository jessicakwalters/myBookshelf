<% include ../partials/header %>

<div class = "container">
    <div class="card-columns">
            
        <% books.forEach((book) => { 
            book.author.forEach((author) => {
                if(currentUser && author.id.equals(currentUser._id)) { %>
                <div class="card">
                    <div class="image-container">
                        <img src="<%= book.image %>" alt="cover image">
                    </div>
                    <div class="card-body">
                        <h5 class="card-title">
                                <%= book.title; %>
                        </h5>
                        <h6 class="card-subtitle mb-2 text-muted">
                                <%= book.book_author; %>
                        </h6>
                        <p class="card-text card-text-short">
                                <%= book.description; %>
                        </p>
                        <p>
                            <a href="/books/<%= book._id %>" class="btn btn-dark">See My Book</a>
                        </p>
                    </div>
                </div>
            <% } %>
            <% }); %>
        <% }); %>
    </div>
</div>

<% include ../partials/footer %>