<% include ../partials/header %>
<div class="container text-center w-50 page-top-third">
    
        <h1>Edit Note</h1>
        <div class="container" >
            <form action="/books/<%= book_id %>/notes/<%= note._id %>?_method=PUT" method="POST">
                <div class="form-group">
                    <textarea class="form-control" type="text" name="note[text]" rows="8"><%= note.text%></textarea>
                </div>    
                <div class="form-group">
                    <button class="btn btn-lg btn-default btn-block btn-dark">Save Changes</button>
                </div>

            </form>
            <a href="/books">Back to Books</a>
        </div>
   
    
    
    
</div>
<% include ../partials/footer %>