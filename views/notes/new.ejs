<% include ../partials/header %>
<div class="container">
    <div class="row">
        <h1 style="text-align: center;">Add a Note to <%= book.title %></h1>
        <div style="width: 30%; margin: 25px auto;">
            <form action="/books/<%= book._id %>/notes" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="note[text]" placeholder="text">
                </div>    
                <div class="form-group">
                    <input class="form-control" type="text" name="note[author]" placeholder="author">
                </div>
            
                <div class="form-group">
                    <button class="btn btn-lg btn-default btn-block btn-primary">Submit!</button>
                </div>

            </form>
            <a href="/books">Back to Books</a>
        </div>
    </div>
    
    
    
</div>
<% include ../partials/footer %>